        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_session_path %>">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link ctaction" href="<%= new_user_registration_path %>">Start Now</a>
        </li>
        <% else %>
        <li class="nav-item">
          <a class="nav-link ctaction" href="<%= billing_path %>">Buy Now</a>
        </li>
        <% end %>
      </ul>
      <% else %>
      <ul class="nav navbar-nav float-lg-right menu-space">
        <li class="nav-item">
          <a class="nav-link" href="/modules">Modules</a>
