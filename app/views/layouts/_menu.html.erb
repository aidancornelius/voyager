<nav class="navbar navbar-light">
  <div class="container">
    <a class="navbar-logo-group" href="<%= root_url %>">
      <%= image_tag("logo.svg", class: "logo") %>
      <span class="navbar-brand text">Assessment Ninja</span>
    </a>
    <button class="navbar-toggler hidden-lg-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
    <div class="collapse navbar-toggleable-md" id="navbarResponsive">
      <% if !current_user_purchased? %>
      <div class="hidden-lg-up"><br><br></div>
      <ul class="nav navbar-nav float-lg-right">
        <li class="nav-item">
          <a class="nav-link" href="/about">Sensei</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/modules">Magic Mojo</a>
