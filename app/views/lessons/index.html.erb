<% title "Admin: Lessons" %>
<div class="container">

  <h2 class="blank-heading text-xs-center">Lessons</h2>

  <p class="text-xs-center action"><%= link_to "Administration", admin_path, class: "btn btn-outline-primary" %> <%= link_to 'New Lesson', new_lesson_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
              <th>Title</th>
              <th>Slug</th>
              <th>Author</th>
              <th>Description</th>
              <th>Visible</th>
              <th>Unlock</th>
              <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lessons.each do |lesson| %>
          <tr>
                <td><%= lesson.title %></td>
                <td><%= lesson.slug %></td>
                <td><%= lesson.author %></td>
                <td><%= lesson.description %></td>
                <td><%= lesson.visible %></td>
                <td><%= lesson.unlock %></td>
                <td><%= link_to 'Show', lesson, class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
