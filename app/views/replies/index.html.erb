<div class="container">

  <h2 class="blank-heading text-xs-center">Replies</h2>

  <p class="text-xs-center action"><%= link_to "Administration", admin_path, class: "btn btn-outline-primary" %> <%= link_to 'New Reply', new_reply_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
              <th>Lesson component</th>
              <th>User</th>
              <th>Reply</th>
              <th>Body</th>
              <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @replies.each do |reply| %>
          <tr>
                <td><%= reply.lesson_component_id %></td>
                <td><%= reply.user_id %></td>
                <td><%= reply.reply_id %></td>
                <td><%= reply.body %></td>
                <td><%= link_to 'Show', reply, class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Edit', edit_reply_path(reply), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
