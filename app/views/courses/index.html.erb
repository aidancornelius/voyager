<% title "Admin: Lessons" %>
<div class="container">

  <h2 class="blank-heading text-center">Courses</h2>

  <p class="text-center action"> <%= link_to 'New Course', new_course_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th>View Live</th>
          <th>Edit Slug</th>
          <th>Delete Course</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.slug %></td>
            <td><%= link_to 'View Live', "/course/#{course.slug}/modules", class: "btn btn-outline-primary", target: "_course_modules" %></td>
            <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-outline-info" %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
