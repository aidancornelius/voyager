<% title "Admin: Lessons" %>
<div class="container">

  <h2 class="blank-heading text-center">Courses</h2>

  <p class="text-center action"> <%= link_to 'New Course', new_course_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.slug %></td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
