<div class="container">

  <h2 class="blank-heading text-xs-center">Media Storages</h2>

  <p class="text-xs-center action"><%= link_to "Administration", admin_path, class: "btn btn-outline-primary" %> <%= link_to 'New Media Storage', new_media_storage_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
              <th width="70%">Title</th>
              <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @media_storages.each do |media_storage| %>
          <tr>
                <td><input type="text" class="form-control" value="[<%= media_storage.title %>](<%= media_storage_path(media_storage) %>)" readonly="READONLY"></td>
                <td><%= link_to 'Edit', edit_media_storage_path(media_storage), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', media_storage, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
