<div class="container">

  <h2 class="blank-heading text-xs-center"><%= @page.title %></h2>
  <p class="text-xs-center action"><%= link_to 'Back', pages_path, class: "btn btn-outline-primary" %> <%= link_to 'Edit', edit_page_path(@page), class: "btn btn-outline-primary" %></p>

  <div class="card">
    <div class="card-block">
      <p>
        <strong>Slug:</strong>
        <%= @page.slug %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= @page.author %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @page.description %>
      </p>
    </div>
  </div>

  <h2 class="blank-heading text-xs-center">Sections</h2>
  <p class="text-xs-center action"><%= link_to 'Add Section', "#{new_page_section_path}?page=#{@page.id}", class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
              <th>Page</th>
              <th>Order</th>
              <th>Title</th>
              <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @page.page_sections.each do |page_section| %>
          <tr>
                <td><%= link_to page_section.page.title, page_section.page %></td>
                <td><%= page_section.order %></td>
                <td><%= page_section.title %></td>
                <td><%= link_to 'Show', page_section, class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Edit', edit_page_section_path(page_section), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', page_section, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
