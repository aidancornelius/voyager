<div class="container">

  <h2 class="blank-heading text-xs-center">Pages</h2>

  <p class="text-xs-center action"><%= link_to "Administration", admin_path, class: "btn btn-outline-primary" %> <%= link_to 'New Page', new_page_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th>Author</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= page.author %></td>
          <td><%= link_to 'View Sections', page, class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Edit', edit_page_path(page), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>
