<div class="container">

  <h2 class="blank-heading text-xs-center">Images</h2>

  <p class="text-xs-center action"><%= link_to "Administration", admin_path, class: "btn btn-outline-primary" %> <%= link_to 'New Image', new_image_path, class: "btn btn-outline-primary" %></p>

  <div class="card">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
              <th>Title</th>
              <th>Image Present</th>
              <th>Image Markdown</th>
              <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @images.each do |image| %>
          <tr>
                <td><%= image.title %></td>
                <td><% if image.image? %><span class="text-success">✔</span><% else %><span class="text-danger">✗</span><% end %></td>
                <td><input type="text" class="form-control" value="![<%= image.title %>](/ai/<%= image.id %>)" readonly></td>
                <td><%= link_to 'Show', image, class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Edit', edit_image_path(image), class: "btn btn-sm btn-outline-secondary" %> <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
