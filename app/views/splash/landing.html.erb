    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 header text-xs-center">
                    <h1>Want
                        <span class="in-font">Ninja-like</span>
                        formative assessment agility?</h1>
                </div>
                <div class="clearfix"></div>
                <% if notice.present? %><br><%= alert_box notice, dismissible: true, context: :info %></p><% end %>
                <% if alert.present? %><br><%= alert_box alert, dismissible: true, context: :danger %></p><% end %>
            </div>

            <div class="card text-xs-center">
                <div class="card-block">
                    <h2>Enter your email address and receive the free eBook...</h2>
                    <br>
                    <%= form_tag("/email_subscribe", method: :post) do %>
                    <%= hidden_field_tag("landing_id", "#{@landing.id}") %>
                    <%= email_field_tag("email", "", placeholder: "Email Address", class: "form-control required", required: true, autofocus: true) %>
                    <br>
                    <%= submit_tag("Join & Download Freebie", class: "btn btn-outline-primary") %>
                    <% end %>
                </div>
            </div>

            <div class="card">
                <div class="card-block">
                  <% if @before %>
                    <%= mdrender(@landing.body_before).html_safe %>
                <% else %>
                    <%= mdrender(@landing.body_after).html_safe %>
                  <% end %>
                  <p class="text-xs-center"><a href="/" class="btn btn-outline-success">Learn more about Assessment Ninja</a></p>
                </div>
            </div>

            <div class="card text-xs-center">
                <div class="card-block">
                    <h2>Enter your email address and receive the free eBook...</h2>
                    <br>
                    <%= form_tag("/email_subscribe", method: :post) do %>
                    <%= hidden_field_tag("landing_id", "#{@landing.id}") %>
                    <%= email_field_tag("email", "", placeholder: "Email Address", class: "form-control required", required: true) %>
                    <br>
                    <%= submit_tag("Join & Download Freebie", class: "btn btn-outline-primary") %>
                    <% end %>
                </div>
            </div>
            <br>
        </div>
    </body>
</html>
