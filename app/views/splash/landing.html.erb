        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="/manifest.json">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">

        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application' %>

        <script src='https://api.mapbox.com/mapbox-gl-js/v0.31.0/mapbox-gl.js'></script>
        <link href='https://api.mapbox.com/mapbox-gl-js/v0.31.0/mapbox-gl.css' rel='stylesheet'/>

        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Rock+Salt|Bangers" rel="stylesheet">

        <style>
            body {
                font-family: 'Open Sans', sans-serif;
                background: url(<%= asset_url("thoughts.svg") %>) top left no-repeat;
                background-size: 250px;
            }
            .header h1 {
                font-family: 'Bangers', cursive;
                font-size: 35pt;
                line-height: 1.5;
                color: #F09149;
                text-shadow: -1px 0 white, 0 1px white, 1px 0 white, 0 -1px white;

            }
            h2 {
              margin-bottom: 0px;
              color: #D062A5;
            }
            a {
                color: #F09149;
            }
            a:hover {
                color: #E36C51;
            }
            .in-font {
                font-family: 'Rock Salt', cursive;
                word-break: keep-all;
                white-space: nowrap;
            }
            .container {
                margin-top: 20px;
            }
            ul {
                list-style-type: none;
            }
            ul li:before {
                content: "\2713\0020";
                font-family: 'Lucida Sans Unicode', 'Arial Unicode MS', Arial;
                margin-left: -20px;
            }
            ul li {
                margin-left: 20px;
                margin-top: 10px;
            }
            .card-block {
                line-height: 1.8;
            }

        </style>

